<div id="InnerContainer">
	<div id="demo">
		<h1>설문 게시판</h1>
		<c:set value="${pagingVO.dataList }" var="surveyList"></c:set>
		
		
		
		<div class="table-responsive-vertical shadow-z-1">
			<table class="table table-hover table-mc-light-blue">
				<thead>
					<tr>
						<th>설문지목적</th>
						<th>설문지이름</th>
						<th>설문지시작일자</th>
						<th>설문지종료일자</th>
					</tr>
				</thead>
				<tbody id="listBody">
					<c:forEach items="${surveyList }" var="survey">
						<tr id="${survey.surId}">
<!-- 							<input type="hidden" > -->
							<td>${survey.surPurpose}</td>
							<td >${survey.subName}</td>
							<td>${survey.surIndate}</td>
							<td>${survey.surEnddate}</td>
						</tr>
					</c:forEach>
				</tbody>
				<tfoot>
					<tr>
						<td colspan="4">
							<div id="pagingArea">${pagingVO.pagingHTML }</div>
						</td>
					</tr>
				</tfoot>
			</table>
			
<table>
        <tr id="search">
            <td colspan="4">
                <form action="?" id="searchForm" class="form-inline justify-content-center mb-3">
                    <input type="hidden" name="page" /> 
                </form>
            </td>
        </tr>
    </table>
		</div>
	</div>

	<script>
	var listBody = $("#listBody");
	var pagingArea = $("#pagingArea");
	var searchForm = $("#searchForm");
	var pageTag = $("[name='page']");

	listBody.on("click", "tr", function() {
		let value = $(this).attr("id");
		location.href = "${cPath}/survey/surveyView.do?surId="+ value;
	});
	

    pageTag.val("1");


	pagingArea.on("click", "a", function(event) {
		event.preventDefault();
		let page = $(this).data("page");
		if (page < 1)
			return false;
		pageTag.val(page);
		searchForm.submit();
		return false;
	});
	
</script>
