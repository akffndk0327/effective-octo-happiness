.filterTable{
	width : 90%;
}
.filterTable input{
	width : 120px;
	height : 30px;
}
.mainTable{
	margin : auto;
	margin-top : 20px;
	min-height : 250px;
	width : 90%;
	border-top : 1px solid #ddd;
	border-bottom : 1px solid #ddd;
}
.mainTable td{
	height : 50px;
	vertical-align : middle;
	border-top : 1px solid #ddd;
	border-bottom : 1px solid #ddd;
}
.mainTable th{
	height : 45px;
}
.oneTd{
	width : 60%;
}
.blank{
	width : 10%;
}
.blankCenter{
	width : 45%;
}
.title{
	width : 90%;
	margin-top : 30px;
	margin-bottom : 30px;
	border-left : 8px solid #2F4F4F;
	padding : 3px;
	font-size : 25px;
	font-weight : bold;
	color : #077B5F;
}
.filterTable{
	margin-left : 50px;
}
.filterTable a, #search{
	cursor : pointer;
	font-size : 15px;
}
.filterTable a:hover{
	background: #2F4F4F;
	color: #fff;
}
#pagingArea{
	text-align : center;
	margin-top : 40px;
	margin-bottom : 70px;
}
.btnCancel{
	background: #2F4F4F;
	color: #fff;
	font-size: 14px;
	border: 1px solid #2F4F4F;
	padding : 1px;
	cursor : pointer;
	width : 100px;
}
.btnRefund{
	background: #fff;
	color: #2F4F4F;
	font-size: 14px;
	border: 1px solid #2F4F4F;
	padding : 1px;
	cursor : pointer;
	width : 100px;
}
.a{
	color:blue;
	cursor : pointer;
	text-decoration: underline;
}
.center{
	text-align : center;
}
.noList{
	text-align : center;
	font-size : 18px;
}
.dtTable {
	width : 90%;
	min-height : 40px;
}
.dtTable td{
	border : 0px;
	min-height : 45px;
}
.prodName{
	width : 63%;
}
.prodQty{
	width : 13%;
	text-align : center;
}
.prodPrice{
	width : 20%;
	text-align : right;
}
.long{
	width : 350px;
}
.short{
	width : 100px;
	text-align : center;
}
.middle{
	width : 100px;
	text-align : right;
	
}
#inputReason{
	width : 300px;
	height : 100px;
}
.modal-title{
	font-size : 20px;
	font-weight : bold;
}
.modal-dialog { 
	width: 23%; height: 30%;
}
.btnGreen{

	background: #2F4F4F;
	color: #fff;
	font-size: 11px;
}
.btnWhite{
	background: #fff;
	color: #2F4F4F;
	font-size: 11px;
	border: 1px solid #2F4F4F;
}
