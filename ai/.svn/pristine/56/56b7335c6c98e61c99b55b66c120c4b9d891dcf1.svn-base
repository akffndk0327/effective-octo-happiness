.prodImg{
	width : 80px;
	height : 80px;
}
.t{
	width : 55%;
	height : auto;
	font-size : 18px;
	text-align : center;
	margin-left : 250px;
	border-collapse: collapse;

}
.prodName{
	font-size : 20px;
	text-align : left;
}
.td2 p{
	font-size : 14px;
	color : #5D5D5D;
	text-align : left;
}
tr{
	width : 100%;
}
th{
/* 	border-top: 1px solid #8C8C8C; */
	border-bottom: 1px solid #8C8C8C;
	height : 35px;
}
td{
	padding : 10px;
}
.cartBox{
	border : 1px solid #8C8C8C;
	width : 55%;
	height : auto;
	text-align : center;
	margin : 5px;
	margin-left : 250px;
	border-collapse: collapse;
}

.td1{
	width : 12%;
}
.td2{
	width : 47%;
	text-align : left;
}
.td3{
	width : 10%;
}
.title{
	width : 55%;
	margin-top : 20px;
	margin-left : 250px;
	border-bottom : 1px solid #8C8C8C;
	font-size : 28px;
	font-weight : bold;
	color : #077B5F;
}

.t2{
	width : 55%;
	height : auto;
	font-size : 18px;
/* 	text-align : center; */
	margin-left : 250px;
	border-collapse: collapse;
	border : 1px solid #8C8C8C;
}
.t2 th{
	width : 30%;
	border : 1px solid #8C8C8C;
	padding : 10px;
}
.t2 td{
	width : 70%;
	border : 1px solid #8C8C8C;
}
.t2 td input{
	height : 30px;	
	margin : 5px;	
	padding: 10px;
}

