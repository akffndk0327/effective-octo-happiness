<style>
#btn1,#btn2{
 		background-color: #077B5F;
 		color:white;
 		width:60px;
}
 	
#btn2{
 		float:right;
}

#search{
    	float:left;
}
</style>
<div id="InnerContainer">
<div id="demo">
	<h1>정정게시판/문의게시판</h1>
	<table>
		<tr id="search">
			<td colspan="4">
				<form action="?" id="searchForm" class="form-inline justify-content-center mb-3">
					<input type="hidden" name="page" /> 
					<select name="searchType" class="form-control mr-2">
						<option value>선택</option>
						<option value="C01">정정게시판</option>
						<option value="Q01">문의게시판</option>
					</select> 
					<select name="searchType2" class="form-control mr-2">
						<option value>선택</option>
						<option value="name">식품</option>
						<option value="check">화학</option>
						<option value="check">날씨</option>
						<option value="check">그외</option>
						<option value="check">쇼핑몰</option>
					</select> 
				</form>
			</td>
		</tr>
	</table>
	<div class="table-responsive-vertical shadow-z-1">
		<!-- Table starts here -->
		<table id="table" class="table table-hover table-mc-light-blue">
			<thead>
				<tr>
					<th>글번호</th>
					<th>문의사항</th>
					<th>작성자</th>
					<th>작성일</th>
				</tr>
			</thead>
			<tbody id="listBody">
				<c:set var="correctList" value="${pagingVO.dataList }" />
				<c:choose>
					<c:when test="${not empty correctList }">
						<c:forEach items="${correctList }" var="correct">
							<tr id="${correct.correctNo }">
								<td>${correct.rnum }</td>
								<td>${correct.correctContent }</td>
								<td>${correct.memId }</td>
								<td>${correct.correctIndate }</td>
							</tr>
						</c:forEach>					
					</c:when>
				</c:choose>
			</tbody>
			<tfoot>
				<tr>
					<td colspan="4">
						<div id="pagingArea">${pagingVO.pagingHTML }</div>
					</td>
				</tr>
			</tfoot>
		</table>
		<input id="btn2" type="button" class="btn mr-2" value="등록" 
		 onclick="location.href='<c:url value="/correct/correctInsert.do"/>';"
		/>
	</div>
</div>
<script type="text/javascript">
	var listBody = $("#listBody");
	var select = $("[name='searchType']");
	
	listBody.on("click","tr",function(){
		
		
		let value = $(this).attr("id");
		location.href="${cPath}/correct/correctView.do?correctNo="+value;
	})
	
	select.on("change",function(){
		let value = $(this).val();
		$.ajax({
			url : "${cPath}/correct/correctList.do",
			method : "get",
			data : {
				"correctType" : value
			},
			dataType : "json",
			success : function(resp) {
				let list = resp.dataList;
				let trTags = [];
				$(list).each(function(i,v){
					let trTag = $("<tr id='"+v.correctNo+"'>").append(
								$("<td>").text(v.rnum),		
								$("<td>").text(v.correctContent),		
								$("<td>").text(v.memId),
								$("<td>").text(v.correctIndate)
					);
					trTags.push(trTag);
				});
				listBody.html(trTags);
				pagingArea.html(resp.pagingHTML);
				pageTag.val();
			},
			error : function(xhr) {
				console.log(xhr.status);
			}
			
		});
	})
	
	
</script>		 
		 
