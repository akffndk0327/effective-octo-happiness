 .mainTable{
 	vertical-align : middle;
 	width : 92%;
 	border : 1px solid #ddd;
    line-height: 1.428571429;
    border-collapse: collapse;
    margin : auto;
    margin-bottom : 30px;
 }
 .one{
 	padding: 15px;
 	border-collapse:collapse;
 	border : 1px solid lightgrey;
 	font-size : 20px;
 	font-weight : bold;
 	width : 10%;
 }
 .two{
 	padding: 15px;
 	border-collapse:collapse;
 	border : 1px solid lightgrey;
 	font-size : 17px;
 	width : 50%;
 }
 .three{
 	padding : 15px;
 	width : 30%;
 	text-align : center;
 }
 .logo{
 	background: #fff;
	color: #322C5C;
	font-size: 17px;
	border: 1px solid #322C5C;
 }
 .three div{
 	margin-top : 15px;
 }
 tbody td{
 	padding: 15px;
 	border-collapse:collapse;
 	border : 1px solid lightgrey;
 	font-size : 17px;
 	font-weight : bold;
 	width : 20%;
 }
 .titleTd{
 	height : 100px;
 }
 .title{
 	font-size : 20px;
 	font-weight : bold;
 }
 .prodImg{
 	width : 250px;
 	height : 300px;
 }
 .detailImg{
 	border : 0px solid darkgrey;
 	margin : auto;
 	width : 500px;
 	height : 600px;
 }
 .detailImg img{
 	width : 100%;
 	height : 97%;
 }
 .down{
 	font-size : 20px;
 	margin-bottom: 10px;
 }
.titleLeftBar{
	font-size : 27px;
	margin-left: 73px;
}
.p{
	font-size : 17px;
	margin-left: 73px;
}
#plusTd{
 	vertical-align : top;
}
#plusTd input[type='text']{
	width : 300px;
}
#plusTd div{
 	vertical-align : top;
 	margin-top : 15px;
 }
#btnPlus, .btnMinus{
	cursor : pointer;
}
.btnGreen{
	background: #fff;
	color: #1277C1;
	border : 1px solid #1277C1;
	font-size: 13px;
}
.btnWhite{
	background: #fff;
	color: #322C5C;
	font-size: 13px;
	border: 1px solid #322C5C;
}
.titleLeftBar{
    border-left: 8px solid #322C5C;
	color: #322C5C;
}
.btnAi0{
	background: #322C5C;
	color: #fff;
}
.btnAi1{
	background: #fff;
	color: #322C5C;
	border: 1px solid #322C5C;
}
#modalTable td{
	font-size : 14px;
	border-left : 0px;
	border-right : 0px;
}
#btnDiv{
	margin-bottom : 200px;
	
}