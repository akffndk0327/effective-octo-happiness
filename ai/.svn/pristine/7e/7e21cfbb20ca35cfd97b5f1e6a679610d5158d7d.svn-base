 <link href="https://cdnjs.cloudflare.com/ajax/libs/summernote/0.8.12/summernote.css" rel="stylesheet">
<script src="https://cdnjs.cloudflare.com/ajax/libs/summernote/0.8.12/summernote.js"></script>
 
<style>
#mainTable{
	width : 100%;
}
#mainTable td{
	border : 0px solid;
}
#mainTable th{
	border-bottom : 2px solid #ddd;
}
.title{
	margin-bottom : 15px;
}
label{
	font-size : 16px;
}
label input{
	width : 15px;
	height : 15px;
}
</style>
<div id="InnerContainer">
<h2 class="titleTopBar">Notice Writing</h2>
<form action="${cPath }/notice/noticeUpdate.do" method="post">
<table id="mainTable" class="table table-hover table-mc-light-blue">
	     <thead>
	        <tr>
	           <th><div class="title">제목 : </div></th>
			   <th>
			   <input type="text" value="${notice.noticeTitle }" style="width: 500px;" name="noticeTitle"/>
	           &nbsp;&nbsp;<label><sup><img src="${cPath }/images/fixBig.png"></sup> 상단에 고정 <sub>
	           <input type="checkbox" name="noticeLevel" value="1" ${notice.noticeLevel eq '1' ? 'selected' : ''}/></sub></label>
	           </th>
	        </tr>
	      </thead>
	      <tbody id="listBody"> 
			<tr>
				<th>내용 : </th>
				<td>
					<textarea  id="summernote" name="noticeContent">
							${notice.noticeContent}
					</textarea>
				</td>
			</tr>
	     </tbody>
	     <tfoot>
	     	<tr>
	     		<td colspan="2">
	     			<input type="hidden" name="noticeNo" value=${notice.noticeNo } />
					<input type="button" class="btn btnAi0" id="back" value="취소"></button>
					<input type="submit" class="btn btnAi1" id="add" value="수정"></button>
	     		</td>
	     	</tr>
	     </tfoot>
	  </table>
</form>


</div>

<script type="text/javascript">
    $('#summernote').summernote({
            height: 400,                 // set editor height
            minHeight: null,             // set minimum height of editor
            maxHeight: null,             // set maximum height of editor
            focus: true                  // set focus to editable area after initializing summernote
            
    });
    $("#back").on("click",function(){
    	history.back();
    })
    

</script>
