 .mainTable{
 	vertical-align : middle;
 	width : 100%;
 	border : 1px solid #ddd;
    line-height: 1.428571429;
    border-collapse: collapse;
    margin : auto;
    margin-bottom : 70px;
 }
 .one{
 	padding: 15px;
 	border-collapse:collapse;
 	border : 1px solid lightgrey;
 	font-size : 17px;
 	font-weight : bold;
 	width : 10%;
 }
 .two{
 	padding: 15px;
 	border-collapse:collapse;
 	border : 1px solid lightgrey;
 	font-size : 15px;
 	width : 50%;
 }
 .three{
 	padding : 15px;
 	width : 30%;
 	text-align : center;
 }
 .logo{
 	background: #fff;
	color: #90c322;
	font-size: 17px;
	border: 1px solid #90c322;
 }
 .three div{
 	margin-top : 15px;
 }
 tbody td{
 	padding: 15px;
 	border-collapse:collapse;
 	border : 1px solid lightgrey;
 	font-size : 17px;
 	font-weight : bold;
 	width : 20%;
 }
 .titleTd{
 	height : 100px;
 }
 .title{
 	font-size : 20px;
 	font-weight : bold;
 }
 .plusTd{
 	vertical-align : top;
 }
 .prodImg{
 	width : 250px;
 	height : 300px;
 }
 .detailImg{
 	border : 1px solid darkgrey;
 	margin : auto;
 	width : 500px;
 	height : 600px;
 }
 .detailImg img{
 	width : 100%;
 	height : 100%;
 }
 .down{
 	font-size : 16px;
 	margin : 20px;
 	margin-left : 70px;
 }
