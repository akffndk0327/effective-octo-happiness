<section id="top">
	<div class="container">
		<div class="row">
			<div class="col-md-2">
				<div class="search-box">
					<div class="input-group">
						<input placeholder="Search Here" type="text" class="form-control">
						<span class="input-group-btn">
							<button class="btn btn-default" type="button"></button>
						</span>
					</div>
					<!-- /.input-group -->
				</div>
				<!-- /.search-box -->
			</div>
			<div class="col-md-3 clearfix">
				<ul class="login-cart">
				<c:set var="ROLE_MEM" value="ROLE_MEM" />
                     <c:set var="ROLE_EMP" value="ROLE_EMP" />
                     <c:set var="ROLE_ADMIN" value="ROLE_ADMIN" />
                  <c:choose>
                     <c:when test="${not empty authMember}">
                        <c:if test="${authMember.authorId eq ROLE_MEM}">
                           <li id="memPage" class="fa fa-user"><a href="${cPath }/mypage/member">${authMember.memName }님</a></li>
                             <c:url value="/cart/cartList.do" var="cartURL">
                                <c:param name="memId" value="${loginId}" />
                             </c:url>
                           <li class="fa fa-user"><a href="${cartURL }" title="장바구니">장바구니</a></li>
                        </c:if>
                        <c:if test="${authMember.authorId eq ROLE_EMP}">
                           <li class="fa fa-user"><a href="${cPath }/mypage/company">${authMember.memName }님</a></li>
                        </c:if>
                        <c:if test="${authMember.authorId eq ROLE_ADMIN}">
                           <li class="fa fa-user"><a href="${cPath }/mypage/admin">${authMember.memName }님</a></li>
                        </c:if>
                        <li class="fa fa-user"><a href="#" onclick="document.logoutForm.submit();">로그아웃</a></li>
                     </c:when>
                     <c:otherwise>
                        <li class="fa fa-user"><a href="${cPath}/login" title="로그인">로그인</a></li>
                        <li class="fa fa-user"><a href="${cPath}/member/memberInsert.do" title="회원가입">회원가입</a></li>
                     </c:otherwise>
                  </c:choose>
				
<%-- 					<li class="fa fa-user"><a href="${cPath}/login" title="로그인">로그인</a></li> --%>
<!-- 					<li class="fa fa-user"><a -->
<%-- 						href="${cPath}/member/memberInsert.do" title="회원가입">회원가입</a></li> --%>
				</ul>
			</div>

		</div>
		<!-- End Of /.row -->
	</div>
	<!-- End Of /.Container -->
</section>
<!-- End of /Section -->


